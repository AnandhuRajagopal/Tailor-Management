                <script>
                    $(document).ready(function () {
                    $(".owl-carousel").owlCarousel({
                    items: 1,
                    loop: true,
                    autoplay: true,
                    autoplayTimeout: 4000,
                    margin: 20,
                    dots: true,
                    nav: false
                    });
                    });

                    $("a").on('click', function(event) {
                        if (this.hash !== "") {
                            event.preventDefault();
                            const hash = this.hash;
                            $('html, body').animate({
                                scrollTop: $(hash).offset().top
                            }, 800, function(){
                                window.location.hash = hash;
                            });
                        }
