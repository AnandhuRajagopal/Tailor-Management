<odoo>
    <data>
        <!-- Feedback menu in Web page -->
        <record id="feedback_page" model="website.menu">
            <field name="name">feedback</field>
            <field name="url">/feedback/page/</field>
            <field name="parent_id" ref="website.main_menu" />
            <field name="sequence" type="int">20</field>
        </record>

        <template id="feedback_page_template" name="Feedback Page">
            <t t-call="website.layout">
                <section class="feedback-section">
                    <div class="col-lg-6">
                        <div class="feedback-form">
                            <h3 class="form-title text-center">Share Your Feedback</h3>
                            <form action="/feedback/submit" method="POST">
                                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                <div class="form-group">
                                    <label for="order_id">Select Order</label>
                                    <select name="order_id" class="form-control" required="1" id="order_id">
                                        <option value="" disabled="disabled">Select an Order</option>
                                        <t t-foreach="orders" t-as="order">
                                            <option t-att-value="order.id"><t t-esc="order.name"/></option>
                                        </t>
                                    </select>
                                </div>
                                <div class="form-group" id="selected_product" readonly="readonly" style="font-weight:bold;">
                                    <!-- Product name will be displayed here -->
                                </div>
                                <div class="form-group">
                                    <label for="feedback">Your Feedback</label>
                                    <textarea class="form-control" id="feedback" name="feedback" rows="4" required="1"></textarea>
                                </div>
                                <center>
                                    <button type="submit" class="btn btn-primary">Submit Feedback</button>
                                </center>
                            </form>
                            
                        </div>
                    </div>
                    <script type="text/javascript">
                        var orderProducts = {
                            <t t-foreach="orders" t-as="order">
                                "<t t-esc="order.id"/>": [
                                    <t t-foreach="order.order_line" t-as="order_line">
                                        "<t t-esc="order_line.product_template_id.name"/>",
                                    </t>
                                ],
                            </t>
                        };
                    
                        document.addEventListener("DOMContentLoaded", function () {
                            var orderDropdown = document.getElementById("order_id");
                            var selectedProduct = document.getElementById("selected_product");
                    
                            orderDropdown.addEventListener("change", function () {
                                var selectedOrderId = this.value;
                                var selectedProductText = selectedOrderId === "" ? "" : orderProducts[selectedOrderId].join(", ");
                                selectedProduct.innerHTML = selectedProductText;
                            });
                        });
                    </script>
                </section>
            </t>
        </template>
        
        
    </data>
</odoo>