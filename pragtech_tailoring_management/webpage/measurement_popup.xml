<odoo>
    <template id="template_inherit" inherit_id="website_sale.product">
        <xpath expr="//div[@id='product_details']" position="inside">
            <div class="product-details">
                <button type="button" name="open_measurement_popup" class="btn btn-primary"
                    id="open_measurement_button" data-toggle="modal"
                    data-target="#measurement_popup" onclick="openMeasurementPopup()">
                    Add Measurement
                </button>
            </div>
            <div class="modal fade" id="measurement_popup" tabindex="-1" role="dialog"
                aria-labelledby="measurement_popup_label" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="measurement_popup_label">Enter Measurements</h5>
                            <button type="button" class="close" data-dismiss="modal"
                                onclick="closeMeasurementPopup()">
                                <span aria-hidden="true"></span>
                            </button>
                        </div>
                        <form method="post" name="measurement_form" action="/store_measurements">
                            <input type="hidden" name="product_id" t-att-value="product.id" />
                            <input type="hidden" name="cloth_type" t-att-value="product.cloth_type.id" />
                            <div class="modal-body">
                                <div class="form-group row align-items-center">
                                    <t t-foreach="product.cloth_type.measurement_ids" t-as="measurement">
                                        <label class="col-sm-3 col-form-label" style="margin-top:20px">
                                            <t t-esc="measurement.measurement_id.name" />
                                            <input type="hidden" t-att-name="'label_' + measurement.measurement_id.name" t-att-value="measurement.measurement_id.name" />
                                        </label>
                                        <div class="col-sm-9">
                                            <input type="text" class="form-control" t-att-name="'measurement_' + measurement.measurement_id.name" style="margin-top:20px" />
                                        </div>
                                    </t>
                                </div>
                            </div>
                            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()" />
                            <input type="hidden" id="product_id" t-att-value="product.id" />

                            <div class="modal-footer">
                                <button type="submit" class="btn btn-primary">Submit</button>
                                <button type="button" class="btn btn-secondary" data-dismiss="modal"
                                onclick="closeMeasurementPopup()">Close</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </xpath>
    </template>
</odoo>