<odoo>
    <data>
        <record id="feedback_page" model="website.menu">
            <field name="name">feedback</field>
            <field name="url">/feedback/page/</field>
            <field name="parent_id" ref="website.main_menu" />
            <field name="sequence" type="int">20</field>
        </record>
        <template id="feedback_page_template" name="Feedback Page">
            <t t-call="website.layout">
                <section class="feedback-section">
                    <div class="col-lg-6">
                        <div class="feedback-form">
                            <h3 class="form-title text-center">Share Your Feedback</h3>
                            <form action="/feedback/submit" method="POST">
                                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                <div class="form-group">
                                    <label for="name">Your Name</label>
                                    <input type="text" class="form-control" id="name" name="name" required="1"/>
                                </div>
                                <div class="form-group">
                                    <label for="email">Your Email</label>
                                    <input type="email" class="form-control" id="email" name="email" required="1"/>
                                </div>
                                <div class="form-group">
                                    <label for="feedback">Your Feedback</label>
                                    <textarea class="form-control" id="feedback" name="feedback" rows="4" required="1"></textarea>
                                </div>
                                <center><button type="submit" class="btn btn-primary">Submit Feedback</button></center>
                            </form>
                        </div>
                    </div>
        </section>
            </t>
        </template>
    </data>
</odoo>