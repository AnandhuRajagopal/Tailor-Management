<odoo>
    <data>
        <record id="view_stock_pickup_form_inherit" model="ir.ui.view">
            <field name="name">stock.pickup.form.inherit</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form" />
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <button name="delivered" type="object" string="DELIVERED" class="btn btn-primary" icon="fa-truck fa-2px" attrs="{'invisible':[('state','!=','done')]}"/>
                </xpath>

                <xpath expr="//field[@name='origin']" position="after">
                    <field name="driver_id" domain="[('job_title', '=', 'Tailor')]" />
                    <field name="product_image" states="done,delivered"/>
                </xpath>
                <field name="state" position="attributes" >
                    <attribute name= 'statusbar_visible'>draft,confirmed,assigned,done,delivered</attribute>
                </field>

            </field>
        </record>
    </data>
</odoo>