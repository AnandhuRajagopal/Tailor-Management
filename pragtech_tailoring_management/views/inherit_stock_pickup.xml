<odoo>
    <data>
        <!-- ******************************** Inherit stock.picking Form View ********************************** -->
        <record id="action_custom_stock_picking" model="ir.actions.act_window">
            <field name="name">Stock Picking</field>
            <field name="res_model">stock.picking</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('picking_type_id.code', '=', 'outgoing')]</field>
        </record>

        <record id="view_stock_pickup_form_inherit" model="ir.ui.view">
            <field name="name">stock.pickup.form.inherit</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form" />
            <field name="arch" type="xml">

                <!-- Added Deliverd button inside the header -->
                <xpath expr="//header" position="inside">
                    <button name="delivered" type="object" string="DELIVERED" class="btn btn-primary" icon="fa-truck fa-2px" attrs="{'invisible':['|','|','|','|','|',('state','=','draft'),('state','=','waiting'),('state','=','ready'),('state','=','delivered'),('state','=','cancel'),('is_delivery','=', False)]}"/>
                </xpath>

                <!-- Added driver_id,product_image fields after the origin field -->
                <xpath expr="//field[@name='origin']" position="after">
                    <field name='is_delivery' invisible='1'/>
                    <field name='photo_req' invisible='1'/>

                    <field name="driver_id" domain="[('job_title', '=', 'Driver')]" options="{'no_create': True,'no_create_edit': True}" attrs="{'invisible':[('is_delivery','=', False)],'required':[('is_delivery','=', True)]}"/>
                    <field name="product_image" attrs="{'invisible':[('photo_req','=', False)]}"/>
                </xpath>

                <!-- Added Statusbar -->
                <field name="state" position="attributes" >
                    <attribute name= 'statusbar_visible'>draft,confirmed,assigned,done,delivered</attribute>
                </field>
            </field>
        </record>
    </data>
</odoo>