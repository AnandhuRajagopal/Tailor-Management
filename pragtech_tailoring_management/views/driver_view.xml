<odoo>
  <data>

    <!-- ********************************* Action View ********************************************* -->
    <record id="tailor_driver_action" model="ir.actions.act_window">
      <field name="name">Driver</field>
      <field name="res_model">tailoring.driver</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- ********************************* Tree View
    ************************************************** -->
    <record id="tailor_driver_tree" model="ir.ui.view">
      <field name="name">driver.tree</field>
      <field name="model">tailoring.driver</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name" />
          <field name="customer_name" />
          <field name="location" />
          <field name="date" />
        </tree>
      </field>
    </record>

    <!-- ********************************* Form View
    ************************************************* -->
    <record id="tailor_driver_form" model="ir.ui.view">
      <field name="name">driver.form</field>
      <field name="model">tailoring.driver</field>
      <field name="arch" type="xml">
        <form>
          <sheet>

            <group>
              <group>
                <field name="name" />
                <field name="customer_name" />
                <field name="location" />
                <field name="date" />
              </group>

            </group>

          </sheet>

        </form>
      </field>
    </record>

  </data>
</odoo>