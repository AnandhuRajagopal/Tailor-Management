<odoo>
    <data>
        <!-- ************************************* kanban view ******************************************** -->
        <record id='driver_kanban' model='ir.ui.view'>
            <field name='name'>driver.kanban</field>
            <field name='model'>tailoring.driver</field>
            <field name='arch' type='xml'>
                <kanban class="o_rse_partner_kanban">
                    <field name="name" />
                    <field name="customer_name" />
                    <field name="location" />
                    <field name="date" />
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click">
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title">
                                        <b><field name="name"/></b>
                                    </strong>
                                    <div t-if="record.customer_name.value">
                                        <span>Customer Name: <t t-esc="record.customer_name.value"/> </span>
                                    </div>
                                    <div t-if="record.location.value">
                                        <span>Location: <t t-esc="record.location.value"/> </span>
                                    </div>
                                    <div t-if="record.date.value">
                                        <span>Date: <t t-esc="record.date.value"/> </span>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- ********************************* Action ********************************************* -->
        <record id="tailor_driver_action" model="ir.actions.act_window">
            <field name="name">Driver</field>
            <field name="res_model">tailoring.driver</field>
            <field name="view_mode">tree,form,kanban</field>
        </record>

        <!-- ********************************* Tree View ************************************************** -->
        <record id="driver_tree_view" model="ir.ui.view">
            <field name="name">driver.tree</field>
            <field name="model">tailoring.driver</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" />
                    <field name="customer_name" />
                    <field name="location" />
                    <field name="date" />
                </tree>
            </field>
        </record>

        <!-- ********************************* Form View ************************************************* -->
        <record id="driver_form_view" model="ir.ui.view">
            <field name="name">driver.form</field>
            <field name="model">tailoring.driver</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="state" widget="statusbar"
                            statusbar_visible="pending,in progress,material collected" />
                    </header>
                    <sheet>

                        <group>
                            <group>
                                <field name="name" />
                                <field name="customer_name" />
                                <field name="location" />
                                <field name="date" />
                                <button name="start" type="object" string="START"
                                    class="btn-primary"
                                    attrs="{'invisible' :['|',('state','=','in progress'),('state','=','material collected')] }" />
                                <button name="finish" type="object" string="FINISH"
                                    class="btn-success"
                                    attrs="{'invisible' :[('state','=','material collected')] }" />
                            </group>

                        </group>

                    </sheet>

                </form>
            </field>
        </record>

    </data>
</odoo>