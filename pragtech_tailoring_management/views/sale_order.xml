<odoo>
    <data>
        <record id="sale.action_orders" model="ir.actions.act_window">
            <field name="name">Orders</field>
            <field name="res_model">sale.order</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="view_sale_order_form_inherit" model="ir.ui.view">
            <field name="name">sale.order.form.inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form" />
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">

                    <button name="measurement" type="object" string="Measurement" />
                    <button name="%(action_view_driver_wizard_form)d" type="action" string="Pickup" />
                    <button name="%(action_view_tailoring_wizard_form)d" type="action" string="Assign Tailor" />

                    <field name="state">
                        <widget name="statusbar" statusbar_visible="draft,sent,sale,done,cancel,pickup,material collected,driver assigned,deliver,finished"/>
                    </field>


                </xpath>
                <xpath expr="/form/sheet/notebook/page/field[@name='order_line']/tree/field[@name='product_template_id']" position="after">
                    <field name="cloth_type_id"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
