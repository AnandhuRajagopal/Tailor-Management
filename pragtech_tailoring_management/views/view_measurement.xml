<odoo>
    <data>

        <!-- ********************************* Action View ********************************************* -->
        <record id="tailor_measurment_action" model="ir.actions.act_window">
            <field name="name">Tailor_Measurments</field>
            <field name="res_model">tailoring.measurement</field>
            <field name="view_mode">tree,form</field>
          </record>

        <!-- ********************************* Tree View ************************************************** -->
          <record id="tailor_measurment_tree" model="ir.ui.view">
            <field name="name">Tailor_Measurments.tree</field>
            <field name="model">tailoring.measurement</field>
            <field name="arch" type="xml">
              <tree>
                <field name="sequence_no"/>
                <field name="name"/>
              </tree>
            </field>
          </record>

        <!-- ********************************* Form View ************************************************* -->
          <record id="tailor_measurment_form" model="ir.ui.view">
            <field name="name">Tailor_Measurments.form</field>
            <field name="model">tailoring.measurement</field>
            <field name="arch" type="xml">
              <form>
                <sheet>
                        <group>
                            <h1><field name="sequence_no"/></h1>
                        </group>
                        <group>
                          <group>
                            <field name="name"/>
                          </group>
                          
                        </group>
                     
                </sheet>
                
              </form>
            </field>
          </record>

    </data>
</odoo>