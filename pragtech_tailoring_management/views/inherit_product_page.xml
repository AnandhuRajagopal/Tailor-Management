<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="action_product_list" model="ir.actions.act_window">
            <field name="name">Products</field>
            <field name="res_model">product.template</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="product_inherit" model="ir.ui.view">
            <field name="name">product</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <group style="font-size:15px;font-weight:none">
                            <field name="cloth_type" />
                            <field name="categories" string="Categories" />
                            <field name="description" />
                            <field name="fabric" />
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>