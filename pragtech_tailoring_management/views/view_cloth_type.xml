<odoo>
    <data>
        <!-- ************************************* kanban view ******************************************** -->
        <record id='cloth_kanban' model='ir.ui.view'>
            <field name='name'>cloth.kanban</field>
            <field name='model'>tailoring.cloth_type</field>
            <field name='arch' type='xml'>
                <kanban class="o_rse_partner_kanban">
                    <field name='name'/>
                    <!-- <field name='fabric_id'/> -->
                    <!-- <field name='measurement_ids'/> -->
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click">
                                <div class="oe_kanban_details">
                                    <div t-if="record.name.value">
                                        <span>Name:
                                            <t t-esc="record.name.value"/>
                                        </span>
                                    </div>
                                    <div t-if="record.fabric_id.value">
                                        <span>Fabric:
                                            <t t-esc="record.fabric_id.value"/>
                                        </span>
                                    </div>
                                    <div t-if="record.measurement_ids.value">
                                        <span>Measurement:
                                            <t t-esc="record.measurement_ids.value"/>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- ************************************* Action ******************************************** -->
        <record id='cloth_action' model='ir.actions.act_window'>
            <field name="name">Cloths</field>
            <field name="res_model">tailoring.cloth_type</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a Cloth Type
                </p>
            </field>
        </record>

        <!-- ************************************* Tree view ******************************************** -->
        <record id='cloth_tree' model='ir.ui.view'>
            <field name='name'>cloth.tree</field>
            <field name='model'>tailoring.cloth_type</field>
            <field name='arch' type='xml'>
                <tree string='cloth_type'>
                    <field name='name'/>
                    <!-- <field name='fabric_id'/>
                    <field name='measurement_ids'/> -->
                    <field name='name'/>
                    <field name='fabric_id'/>
                    <field name='measurement_ids'/>
                </tree>
            </field>
        </record>

        <!-- ************************************* Form view ******************************************** -->
        <record id='cloth_form' model='ir.ui.view'>
            <field name='name'>cloth.form</field>
            <field name='model'>tailoring.cloth_type</field>
            <field name='arch' type='xml'>
                <form string='cloth'>
                    <sheet>
                        <group>
                            <group>
                                <field name='name'/>
                                <field name='fabric_id'/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Measurement">
                                <field name="measurement_ids">
                                    <tree editable="bottom">

                                        <field name="measurement_id"/>

                                        <field name="measurement_id"/>
                                        <field name="sequence_no"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- ************************************* Search view ******************************************** -->
        <record id="cloth_search" model="ir.ui.view">
            <field name="name">cloth.search</field>
            <field name="model">tailoring.cloth_type</field>
            <field name="arch" type="xml">
                <search>
                    <field name='name'/>
                    <!-- <field name='fabric_id'/> -->
                    <field name='name'/>
                    <field name='fabric_id'/>
                </search>
            </field>
        </record>
    </data>
</odoo>