<odoo>
    <data>

        <record id="sale.action_orders" model="ir.actions.act_window">
            <field name="name">Orders</field>
            <field name="res_model">sale.order</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="view_sale_order_form_inherit" model="ir.ui.view">
            <field name="name">sale.order.form.inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <!-- Adding a Send mail button -->
                    <button name="action_delivery_mail" type="object" string="Delivery Ready Mail"
                            attrs="{'invisible' :[('state','!=','ready to deliver')] }" icon="fa-envelope"
                            class="btn-info"/>

                    <!-- Adding a Pickup wizard button -->
                    <button name="%(action_view_driver_wizard_form)d" type="action" string="Pickup" states="sale"
                            icon="fa-id-card-o" class="btn-primary"/>

                    <!-- Adding an Assign Tailor wizard button -->
                    <button name="%(action_view_tailoring_wizard_form)d" type="action" string="Assign Tailor"
                            attrs="{'invisible': [('state', '!=', 'material collected')]}" icon="fa-scissors"
                            class="btn-primary"/>

                    <!-- Adding a Delivery Confirm button -->
                    <button name="%(action_view_driver_wizard_form)d" type="action" string="Delivery"
                            attrs="{'invisible': [('state', '!=', 'ready to deliver')]}" icon="fa-truck"
                            class="btn-primary"/>

                    <!-- Adding a statusbar -->

                </xpath>


                <field name="state" position="attributes">
                    <attribute name='statusbar_visible'>draft,sale,pickup,material collected,tailor assigned,ready to deliver,finished</attribute>
                </field>

                <xpath expr="//sheet/div/button" position="before">
                    <!-- Adding Measurement smart button -->
                    <button name="current_tailor_record" type="object" class="oe_stat_button" icon="fa-sort-numeric-asc">
                        <div class="o_stat_info">
                            <span class="o_stat_text">Measurement</span>
                        </div>
                    </button>

                    <!-- Adding Assigned Driver smart button -->
                    <!-- visible Assigned Driver smart button only in pickup,material collected,tailor assigned,ready to deliver,finished states -->
                    <button name="current_driver_record" type="object" class="oe_stat_button" icon="fa-id-card-o"
                            states="pickup,material collected,tailor assigned,ready to deliver,finished">
                        <div class="o_stat_info">
                            <span class="o_stat_text">Assigned</span>
                            <span class="o_stat_text">Driver</span>
                        </div>
                    </button>

                    <!-- Adding Assigned Tailor smart button -->
                    <!-- visible Assigned Tailor smart button only in tailor assigned,ready to deliver,finished states -->
                    <button name="current_tailor_record" type="object" class="oe_stat_button" icon="fa-scissors" states="tailor assigned,ready to deliver,finished">
                        <div class="o_stat_info">
                            <span class="o_stat_text">Assigned</span>
                            <span class="o_stat_text">Tailor</span>
                        </div>
                    </button>
                </xpath>

                <xpath expr="/form/sheet/notebook/page/field[@name='order_line']/tree/field[@name='product_template_id']" position="after">
                    <field name="cloth_type_id"/>
                </xpath>

                <xpath expr="/form/sheet/notebook/page/field[@name='order_line']/tree/field[@name='price_subtotal']" position="after">
                    <button name="wizard_value_pass" string="Add Measurement" type="object" class="oe_highlight"/>
                </xpath>

                <!-- Inherit and visible customer preview smart button only in sale,pickup,material collected,tailor assigned,ready to deliver,finished states -->
              <xpath expr="//button[@name='action_preview_sale_order']" position="attributes">
    <attribute name="attrs">{'invisible': [('state', 'not in', ('sale','pickup','material collected','tailor assigned','ready to deliver','finished'))]}</attribute>
</xpath>


                <!-- Inherit and visible send by email button only in sale -->
                <xpath expr="//button[@name='action_quotation_send']" position="attributes">
    <attribute name="invisible">context.get('state') != 'sale'</attribute>
</xpath>


                <!-- <xpath expr="//button[@name='action_view_delivery']" position="attributes">
                    <attribute name="attrs">{'invisible': [('state', '!=', 'ready_to_deliver')]}</attribute>
                </xpath> -->


                <!-- Added ribbon widget -->
                <xpath expr="//sheet/div" position="after">
                    <widget name="web_ribbon" title="Tailor Assigned" bg_color="bg-success"
                            attrs="{'invisible':[('state','!=','tailor assigned')]}"/>
                    <widget name="web_ribbon" title="Driver Assigned" bg_color="bg-success"
                            attrs="{'invisible':[('state','!=','pickup')]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>