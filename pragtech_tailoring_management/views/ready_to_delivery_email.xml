<odoo>
    <data>
        <record id="mail_template_ready_to_delivery" model="mail.template">
            <field name="name">Ready To Delivery Product</field>
            <field name="model_id" ref="model_sale_order"/>
            <field name="subject">Your product is ready for delivery</field>
            <field name="email_from">{{(object.company_id and object.company_id.email) or ''}}</field>
            <field name="email_to">{{object.partner_id.email}}</field>
            <field name="auto_delete" eval="False"/>
            <field name="body_html" type="html">
                <h2>Delivery Status:</h2>
                <p>Your Product is ready for delivery</p>
                <ul>
                    <h3>Dear<t t-out="object.partner_id.name"/></h3>
                    <br/>
                    <br/>
                    <h3>Your product with Order ID: <t t-out="object.name"/>is ready to be delivered</h3>
                    <br/>
                    <h3>Products:<t t-out="', '.join(product.name for product in object.order_line)"/></h3>
                </ul>
                <p>Thank you for choosing us!</p>
            </field>
        </record>
    </data>
</odoo>
