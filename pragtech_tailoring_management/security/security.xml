<odoo>
    <record model="ir.module.category" id="module_category_tailoring_management">
        <field name="name">Tailoring Management</field>
        <field name="description">Category For Tailoring Management</field>
        <field name="sequence">9</field>
    </record>

    <record id="group_tailoring_management_customer" model="res.groups">
        <field name="name">Customer</field>
        <field name="category_id" ref="module_category_tailoring_management"/>
    </record>
    <record id="group_tailoring_management_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="module_category_tailoring_management" />
            <field name="implied_ids" eval="[(4, ref('base.user_admin'))]" />
    </record>
    <record id="group_tailoring_management_tailor" model="res.groups">
        <field name="name">Tailor</field>
        <field name="category_id" ref="module_category_tailoring_management"/>
        <field name="implied_ids" eval="[(4,ref('group_tailoring_management_customer'))]"/>
    </record>
</odoo>
