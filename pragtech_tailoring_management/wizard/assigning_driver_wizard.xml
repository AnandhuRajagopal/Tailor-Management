<odoo>
    <data>
        <odoo>
            <data>
                <record id="view_driver_wizard_form" model="ir.ui.view">
                    <field name="name">driver.wizard.form</field>
                    <field name="model">driver.wizard</field>
                    <field name="arch" type="xml">
                        <form string="Assigning Driver wizard">
                            <group>
                                <field name="driver_id" />
                                <field name="order_id" />
                                <!-- <field name="location"/> -->
                                <field name="date"/>
                                <field name="state"/>
                            </group>
                            <footer>
                                    <button name="driver_wizard_pickup_action" type="object" string="PICKUP" class="btn-primary" attrs="{'invisible': [('state', '==', 'ready to deliver')]}" />
                                    <button name="driver_wizard_delivery_action" type="object" string="DELIVERY" class="btn-primary" attrs="{'invisible': [('state', '==', 'sale')]}"/>
                                    <button string="Cancel" class="btn-secondary" special="cancel" />
                            </footer>
                        </form>
                    </field>
                </record>
                <record id="action_view_driver_wizard_form" model="ir.actions.act_window">
                    <field name="name">Assigning Driver Wizard</field>
                    <field name="type">ir.actions.act_window</field>
                    <field name="res_model">driver.wizard</field>
                    <field name="view_mode">form</field>
                    <field name="view_id" ref="view_driver_wizard_form"/>
                    <field name="target">new</field>
                </record>
            </data>
        </odoo>
    </data>
</odoo>